<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceHistoryActivity">

    <TextView
        android:id="@+id/invoice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="HISTORY PEMBELIAN"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/switch_history_store"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/invoice_title"
        android:layout_centerHorizontal="true"
        android:text="Lihat History Toko" />

    <ListView
        android:layout_below="@id/switch_history_store"
        android:id="@+id/list_history_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:descendantFocusability="blocksDescendants" />

</RelativeLayout>